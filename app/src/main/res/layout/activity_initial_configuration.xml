<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient_background"
    tools:context=".activities.initialConfigurationActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerInitialConfiguration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutInitialConfiguration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:rotation="270"
        android:src="@drawable/up_pointing_arrow"
        android:visibility="invisible"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutInitialConfiguration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabLayoutInitialConfiguration" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:rotation="90"
        android:src="@drawable/up_pointing_arrow"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutInitialConfiguration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabLayoutInitialConfiguration" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutInitialConfiguration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="#00000000" />

</android.support.constraint.ConstraintLayout>